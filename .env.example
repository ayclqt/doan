# LLM API Credentials
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Vector Database Configuration
QDRANT_URL=localhost
QDRANT_PORT=6334                    # gRPC API port (only protocol supported)
QDRANT_COLLECTION_NAME=product_data

# Embedding Model
EMBEDDING_MODEL_NAME=AITeamVN/Vietnamese_Embedding

# LLM Configuration
LLM_MODEL_NAME=grok-3-mini
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=1024

# Text Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Web Search Configuration
WEB_SEARCH_ENABLED=true
WEB_SEARCH_MAX_RESULTS=5
WEB_SEARCH_REGION=vn-vi
WEB_SEARCH_TIMELIMIT=
WEB_SEARCH_BACKEND=auto
WEB_SEARCH_SIMILARITY_THRESHOLD=0.7

# Data Paths
CLEANED_DATA_PATH=cleaned_data.json
